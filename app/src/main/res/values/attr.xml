<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.PageIndicatorDefaults" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="vpiIconPageIndicatorStyle">@style/Widget.IconPageIndicator</item>
        <item name="vpiTabPageIndicatorStyle">@style/Widget.MyTabPageIndicator</item>
    </style>

    <style name="Widget.MyTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:background">@drawable/vp_tab_indicator</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MyTabPageIndicator</item>
    </style>

    <style name="TextAppearance.MyTabPageIndicator" parent="TextAppearance.TabPageIndicator">
        <item name="android:textColor">@color/vp_tab_color</item>
    </style>
</resources>